<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_result"
        android:gravity="center"
        android:textSize="28sp"
        android:text="点击下方按钮开始随机"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/shapeTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="开始"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result"
        app:shape_radius="8dp"
        app:shape_solidColor="@color/common_accent_color" />

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/edit_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="编辑选项"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeTextView2"
        app:shape_radius="8dp"
        app:shape_solidColor="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>